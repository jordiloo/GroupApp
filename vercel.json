{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/$1" }
    ],
    "builds": [
      { "src": "server/server.js", "use": "@vercel/node" },
      { "src": "dist/**", "use": "@vercel/static-build" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/server.js" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  